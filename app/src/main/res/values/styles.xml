    <!-- Button Styles -->
    <style name="SureButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/brown_color</item>
        <item name="colorControlHighlight">@color/colorhighlighSure</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="colorAccent">@color/brown_color</item>
    </style>

    <style name="ok_order_Button" parent="Widget.AppCompat.Button.Colored">
